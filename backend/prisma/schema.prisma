datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int          @id @default(autoincrement())
  email     String       @unique
  password  String
  createdAt DateTime     @default(now())

  submissions Submission[]
}

model Problem {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  difficulty  String
  examples    Json
  testCases   Json
  createdAt   DateTime     @default(now())

  submissions Submission[]
}

model Submission {
  id          Int      @id @default(autoincrement())
  userId      Int
  problemId   Int
  language    String
  code        String
  status      String
  output      String?
  executionMs Int?
  createdAt   DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  problem Problem @relation(fields: [problemId], references: [id])
}

