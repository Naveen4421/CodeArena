datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int          @id @default(autoincrement())
  email     String       @unique
  username  String       @unique
  password  String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  submissions Submission[]
}

model Problem {
  id          Int          @id @default(autoincrement())
  title       String       @unique
  slug        String       @unique
  description String
  difficulty  String       // Easy, Medium, Hard
  category    String       // Array, String, DP, etc.
  hints       String[]     // Array of hints
  constraints String[]     // Array of constraints
  examples    Json         // Array of example objects
  starterCode Json         // Starter code for each language
  testCases   Json         // Array of test cases (input, output)
  hiddenCases Json?        // Hidden test cases for submission
  likes       Int          @default(0)
  dislikes    Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  submissions Submission[]
}

model Submission {
  id          Int      @id @default(autoincrement())
  userId      Int
  problemId   Int
  language    String   // javascript, python, cpp, java
  code        String
  status      String   // Accepted, Wrong Answer, Runtime Error, Time Limit Exceeded
  runtime     Int?     // in ms
  memory      Int?     // in KB
  passedCases Int      // Number of test cases passed
  totalCases  Int      // Total test cases
  error       String?  // Error message if any
  output      String?  // Console output
  createdAt   DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  problem Problem @relation(fields: [problemId], references: [id])

  @@index([userId])
  @@index([problemId])
  @@index([createdAt])
}
